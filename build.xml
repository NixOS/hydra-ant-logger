<?xml version="1.0"?>
<project name="HydraAntLogger" basedir="." default="jar">
    <property name="output" value="bin"/>
    <property name="version" value="2010.1"/>

    <target name="compile" depends="create">
        <javac destdir="bin">            
            <src path="src"/>
            <classpath refid="java"/>
        </javac>
    </target>

    <target name="jar" depends="compile">
        <jar destfile="hydra-ant-logger-${version}.jar">
            <fileset dir="bin"/>
        </jar>
    </target>

    <target name="clean">
        <delete dir="${output}"/>
    </target>

    <target name="create" depends="clean">
        <mkdir dir="${output}"/>
    </target>

    <path id="java">
        <fileset dir="lib">
            <include name="*.jar"/>
        </fileset>
    </path>
</project>
